{
  "datasources" : [
      {
        "id" : "STARS4ALL Photometers Metadata datasource",
        "type" : "JsonSpotlightDatasource",
        "arguments" : ["$.[*]", "0.80", "$.city", "$.location"],
        "connector"  : {
         "arguments" : ["http://api.stars4all.eu/photometers"],
         "type" : "URLConnector",
        }
      }
  ],
   "resource_rules" : [
    { 
      "id" : "STARS4ALL Photometers metadata",
      "datasource_ids" : ["STARS4ALL Photometers Metadata datasource"],
      "subject" : "http://helio.linkeddata.es/stars4all/photometers/{$.name}",
      "properties"  : [
            {
               "predicate" : "http://www.w3.org/2003/01/geo/wgs84_pos#location", 
               "object" : "http://helio.linkeddata.es/stars4all/photometers/{$.name}/location",
               "is_literal" : "False" 
            },{
               "predicate" : "http://schema.org/location", 
               "object" : "http://helio.linkeddata.es/stars4all/locations/cities/[lower(regexp_replace(escapeHtml4(stripAccents({$.city})), '\\s+', '_'))]",
               "is_literal" : "False" 
            },{
               "predicate" : "http://schema.org/location", 
               "object" : "http://helio.linkeddata.es/stars4all/locations/places/[lower(regexp_replace(escapeHtml4(stripAccents({$.location})), '\\s+', '_'))]",
               "is_literal" : "False" 
            },{
               "predicate" : "http://schema.org/location", 
               "object" : "http://helio.linkeddata.es/stars4all/locations/cities/[lower(regexp_replace(escapeHtml4(stripAccents({$.city-enhanced})), '\\s+', '_'))]",
               "is_literal" : "False" 
            },{
               "predicate" : "http://schema.org/location", 
               "object" : "http://helio.linkeddata.es/stars4all/locations/places/[lower(regexp_replace(escapeHtml4(stripAccents({$.location-enhanced})), '\\s+', '_'))]",
               "is_literal" : "False" 
            }
      ]
    }
  ]
}