{
    "datasources" : [
        {
          "id" : "EPW Values periods",
          "type" : "JsonDatasource",
          "arguments" : ["$.typical_extremePeriods[*]"],
          "connector"  : {
           "arguments" : ["/Users/cimmino/Desktop/salva/data/Madrid.json"],
           "type" : "LocalFileConnector"
          }
        },{
          "id" : "EPW Values location",
          "type" : "JsonDatasource",
          "arguments" : ["$.location[*]"],
          "connector"  : {
           "arguments" : ["/Users/cimmino/Desktop/salva/data/Madrid.json"],
           "type" : "LocalFileConnector"
          }
        },
    ],
    "resource_rules": [
        {
            "id" : "Periods",
            "datasource_ids" : ["EPW Values periods"],
            "subject" : "http://localhost:8080/def/weather#[REPLACE(hashCode(CONCAT({$.typeOfPeriod},{$.season})),'-','0')]",
            "properties"  : [
                {
                    "predicate" : "http://localhost:8080/def/weather#observedInSeason", 
                    "object" : "http://localhost:8080/def/weather#{$.season}",
                    "is_literal" : "False" 
                },
                {
                    "predicate" : "http://localhost:8080/def/weather#firstDate", 
                    "object" : "{$.firstDate}",
                    "datatype": "http://www.w3.org/2001/XMLSchema#dateTime",
                    "is_literal" : "True" 
                },
                {
                    "predicate" : "http://localhost:8080/def/weather#lastDate", 
                    "object" : "{$.lastDate}^^http://www.w3.org/2001/XMLSchema#dateTime",
                    "is_literal" : "True" 
                }
            ]
        }, {
            "id" : "Location",
            "datasource_ids" : ["EPW Values location"],
            "subject" : "http://localhost:8080/resource/weather/{$.adm03}/{$.city}/{$.wmo}/Device",
            "properties" : [
                {
                    "predicate" : "http://localhost:8080/def/weather#locatedIn", 
                    "object" : "http://localhost:8080/resource/weather/city/{$.city}",
                    "is_literal" : "False" 
                },
                {
                    "predicate" : "http://localhost:8080/def/weather#locatedIn", 
                    "object" : "http://localhost:8080/resource/weather/country/{$.country}",
                    "is_literal" : "False" 
                },
                {
                    "predicate" : "http://localhost:8080/def/weather#locatedIn", 
                    "object" : "http://localhost:8080/resource/weather/{$.adm03}/{$.city}/{$.wmo}/spatialThing/Point",
                    "is_literal" : "False" 
                }
            ]
        }                                     
    ]
}